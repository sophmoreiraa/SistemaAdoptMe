@model IEnumerable<AdoptMe.Models.Observacoes>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoObservacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocalObservacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animais)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoObservacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocalObservacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Animais.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ObservacoesId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ObservacoesId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ObservacoesId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
